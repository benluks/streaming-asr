{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Python: Debug Current File",
        "type": "debugpy",
        "request": "launch",
        "program": "${file}",
        "console": "integratedTerminal",
        "env": {
          "LD_LIBRARY_PATH": "/usr/local/opt/ffmpeg@6/lib",
          "DYLD_LIBRARY_PATH": "/usr/local/opt/ffmpeg@6/lib",
          "PKG_CONFIG_PATH": "/usr/local/opt/ffmpeg@6/lib/pkgconfig",
          "LDFLAGS": "-L/usr/local/opt/ffmpeg@6/lib",
          "CPPFLAGS": "-I/usr/local/opt/ffmpeg@6/include"
        }
      }
    ]
  }
  